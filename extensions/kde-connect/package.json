{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "kde-connect",
  "title": "KDE Connect",
  "description": "An extension to access KDE Connect in Raycast.",
  "icon": "command-icon.png",
  "author": "StevenRCE0",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "List and Pair Devices",
      "description": "List and pair devices to use with KDE Connect",
      "mode": "view"
    },
    {
      "name": "share",
      "title": "Share",
      "subtitle": "To KDE Connect",
      "description": "Share string, path or URL",
      "mode": "no-view",
      "arguments": [
        {
          "name": "string",
          "placeholder": "Content",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.49.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
